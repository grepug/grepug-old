script#post-tpl(type='text/x-handlebars-template')
  .g-blog-post
    .g-blog-post-main
      .g-blog-post-content {{{content}}}
      .g-blog-post-footer
        .container-fluid
          .row
            .col-sm-3
              span.g-blog-post-meta updated {{time updatedAt true}}
            .col-sm-9
              span.g-blog-post-meta
                | created at {{time createdAt false}}
                span.g-blog-post-share
                  a
                    span.glyphicon.glyphicon-star
    .g-blog-comment-editor
      .form-inline.g-form
        label(for='username') Your name
        input#username.form-control(type='text')
      label(for='comment') Your comment ( you can write with MarkDown )
      textarea.form-control.comment(rows='5')
      .g-blog-post-comment-footer
        button#g-blog-comment-submit.btn.btn-primary Submit
        a#g-editor-larger.btn.btn-success(data-toggle='modal', data-target='#g-editor-modal') Larger with preview

